{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfig": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_20", "python3", "gcc", "make"]
        },
        "install": {
          "cmds": [
            "npm ci --prefer-offline --no-audit"
          ]
        }
      }
    }
  },
  "deploy": {
    "healthcheckPath": null,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
